/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,

    "useDefineForClassFields": false,

    "moduleResolution": "bundler",
    "module": "preserve",
    "target": "ES2022",

	// Links the library source files directly to the demo app directly (as if the library were part of the demo-app)
	// Enables instant rebuilds without running a separate watch or library build.
    "paths": {
      "@mk-magic-alerts": [
        "../mk-magic-alerts-lib/projects/mk-magic-alerts/src/public-api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}

